{
  "name": "crypto-verifier-openserv",
  "version": "1.0.0",
  "description": "A Telegram bot that detects crypto scams and protects users from fraudulent projects using OpenServ agents",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/index.ts",
    "build": "tsc",
    "start": "node -r dotenv/config dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "crypto",
    "scam",
    "detection",
    "telegram",
    "bot",
    "openserv",
    "security"
  ],
  "author": "Hackathon Team",
  "license": "MIT",
  "dependencies": {
    "@openserv-labs/sdk": "^1.1.0",
    "dotenv": "^16.4.5",
    "node-telegram-bot-api": "^0.63.0",
    "uuid": "^11.0.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
